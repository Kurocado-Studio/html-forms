{
  "compilerOptions": {
    "outDir": "./dist/out-tsc/spec",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
